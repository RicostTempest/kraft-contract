            LEFT JOIN kc_teacher ON u_a.authentication_id = kc_teacher.id
          </if>

      WHERE
          is_student = #{isStudent}
          <if test="name != null">
            AND `name` LIKE "%"#{name}"%"
          </if>
          <if test="telephone != null">
            AND kc_user.telephone LIKE "%"#{telephone}"%"
          </if>
